<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <gradient android:startColor="#b4909090" android:endColor="#b4fafafa" android:angle="90"/>
            <corners android:topLeftRadius="16dp"
                android:topRightRadius="16dp"/>
        </shape>
    </item>
    <item
        android:top="4dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners android:topLeftRadius="16dp"
                android:topRightRadius="16dp"/>
        </shape>
    </item>

    <item

        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/sota_scooter_gradient_end"
                android:centerX="0.4"
                android:endColor="@color/sota_scooter_gradient_end"
                android:startColor="@color/sota_scooter_gradient_start" />
            <corners android:topLeftRadius="16dp"
                android:topRightRadius="16dp"/>
        </shape>
    </item>
</layer-list>
