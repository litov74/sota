<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/main_promo_image_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_back_new"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="16dp"
            android:text="@string/my_promo"
            android:textColor="#000000"
            android:textSize="20dp"
            app:fontFamily="@font/geometria"
            android:textStyle="bold" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_promo_new"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/segment_black"
            android:layout_marginTop="32dp"
            android:text="В настоящее время у вас нет активных акций. Будьте терпеливы и следите за новостями !"
            app:fontFamily="@font/geometria"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAttachPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/background_stroke_red"
            android:enabled="true"
            android:padding="4dp"
            android:text="@string/attach_promotional"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>