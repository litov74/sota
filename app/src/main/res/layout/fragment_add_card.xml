<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/cardNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="@color/gray_edit_text"
        android:hint="Номер карты"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="20dp"
        android:lines="1"
        android:singleLine="true"
        app:itemCount="1"
        android:paddingTop="16dp"
        app:viewType="line"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/cardholderInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:backgroundTint="@color/gray_edit_text"
        android:hint="Имя на карте"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="20dp"
        android:lines="1"
        android:singleLine="true"
        app:itemCount="1"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cardNumberInput"
        app:viewType="line"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardholderInput">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/cardDateInput"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/gray_edit_text"
            android:hint="ММ/ГГ"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="20dp"
            app:itemCount="1"
            app:layout_constraintTop_toBottomOf="@+id/cardNumberInput"
            app:viewType="line"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/cardCodeInput"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/gray_edit_text"
            android:hint="CVV"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="20dp"
            app:itemCount="1"

            app:layout_constraintTop_toBottomOf="@+id/cardNumberInput"
            app:viewType="line"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Мы спишем и тут же вернем 1₽, чтобы\nудостовериться, что твоя карта работает"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCard"
        app:layout_constraintBottom_toTopOf="@id/buttonRegCard"/>

    <Button
        android:id="@+id/buttonRegCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_curved_gradient"
        android:text="Добавить"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>