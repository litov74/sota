<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textViewItemFinishedOrderDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:textSize="13sp"
            android:layout_gravity="top"
            app:fontFamily="@font/geometria"
            android:textColor="@color/segment_black"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/scooterNumber"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:textSize="13sp"
            android:layout_marginStart="8dp"
            android:layout_gravity="top"
            app:fontFamily="@font/geometria"
            android:textColor="@color/segment_black"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/textViewItemFinishedDelta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top" />

        <TextView
            android:id="@+id/textViewItemFinishedOrderAmount"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:fontFamily="@font/geometria"
            android:gravity="start|top"
            android:textSize="13sp"
            android:layout_gravity="top"
            android:textColor="@color/segment_black"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>